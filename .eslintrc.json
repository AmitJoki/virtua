{
  "root": true,
  "env": {
    "browser": true,
    "node": true
  },
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": 2018,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "overrides": [
    {
      "files": ["src/react/**/*.{jsx,tsx}"],
      "extends": ["plugin:react-hooks/recommended"],
      "settings": {
        "react": {
          "version": "detect"
        }
      }
    },
    {
      "files": ["src/vue/**/*.{jsx,tsx}"],
      "parser": "vue-eslint-parser",
      "parserOptions": {
        "parser": "@typescript-eslint/parser",
        "sourceType": "module"
      },
      "extends": ["plugin:vue/vue3-recommended"]
    }
  ]
}
